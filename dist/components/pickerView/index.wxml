<block wx:if="{{$taroCompReady}}">
    <view class="{{isShow ? 'picker_modal_wrapper_show' : 'picker_modal_wrapper_hidden'}}">
        <view class="picker_modal_content">
            <view class="picker-header"><text class="cancelTitle" bindtap="funPrivateRqkZI">{{cancelTitle}}</text><text class="title">{{pickerTitle}}</text><text class="confirmTitle" bindtap="funPrivateRsijP">{{confirmTitle}}</text>
            </view>
            <picker-view value="{{values}}" bindchange="onChangePickerValues" class="myPicker">
                <block>
                    <block wx:if="{{1 === columns}}">
                        <picker-view-column>
                            <view class="content" wx:key="index" wx:for="{{columnsData}}" wx:for-item="item" wx:for-index="index">{{item}}</view>
                        </picker-view-column>
                    </block>
                    <block wx:elif="{{2 === columns}}">
                        <view class="content_container">
                            <picker-view-column>
                                <view class="content" wx:key="index" wx:for="{{columnsData[0]}}" wx:for-item="item" wx:for-index="index">{{item}}</view>
                            </picker-view-column>
                            <picker-view-column>
                                <view class="content" wx:key="index" wx:for="{{columnsData[1]}}" wx:for-item="item" wx:for-index="index">{{item}}</view>
                            </picker-view-column>
                        </view>
                    </block>
                </block>
            </picker-view>
        </view>
    </view>
</block>